#!/usr/bin/env sh

# Get the current branch name (handle branches with slashes)
current_branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)

# Protected branches
protected_branches="main old-site"

# Check if current branch is protected
for branch in $protected_branches; do
  if [ "$current_branch" = "$branch" ]; then
    echo ""
    echo "ðŸš« ERROR: Direct pushes to '$branch' branch are not allowed!"
    echo ""
    echo "Please use the following workflow instead:"
    echo "  1. Create a feature branch: git checkout -b feature/your-feature"
    echo "  2. Make your changes and commit them"
    echo "  3. Push your feature branch: git push origin feature/your-feature"
    echo "  4. Create a Pull Request on GitHub"
    echo ""
    echo "This policy ensures code review and maintains branch protection."
    echo ""
    exit 1
  fi
done

# If we get here, the branch is safe to push
echo "âœ… Pushing to '$current_branch' branch - this is allowed" 